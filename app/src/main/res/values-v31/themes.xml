<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Oipie" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@color/purple_700</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.Oipie.Starting" parent="Theme.SplashScreen">
        <item name="android:windowSplashScreenIconBackgroundColor">#FFDF25</item>
        <item name="windowSplashScreenBackground">@color/purple_700</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_broccoli_foreground</item>
        <item name="windowSplashScreenAnimationDuration">500</item>
        <item name="postSplashScreenTheme">@style/Theme.Oipie</item>
    </style>
</resources>